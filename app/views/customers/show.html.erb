<%= render :partial => 'top_menu' %>

<h2><%= l(:label_customer) %></h2>

<% unless @customer.nil? -%>
  <div class="box">
    <p><%= link_to "#{@customer} - Detalhes", '#', :class => 'header' %> | <%= link_to_tasks @customer %> | <%= link_to_new_task @customer %></p>
    <div class="details">
      <p><%= l(:field_name) %>: <%= h @customer.name %></p>
      <p><%= l(:field_address) %>: <%= h "#{@customer.address_type} #{@customer.address}" %></p>
      <p><%= l(:field_number) %>: <%= h @customer.number %></p>
      <p><%= l(:field_neighborhood) %>: <%= h @customer.neighborhood %></p>
      <p><%= l(:field_obs) %>: <%= h @customer.obs %></p>
      <p><%= l(:field_residential_phone) %>: <%= h @customer.residential_phone %></p>
      <p><%= l(:field_mobile_phone) %>: <%= h @customer.mobile_phone %></p>
      <p><%= l(:field_email) %>: <%= h @customer.email %></p>
      <p><%= l(:field_birthday) %>: <%= @customer.birthday %></p>
      <p><%= l(:field_cpf) %>: <%= h @customer.cpf %></p>
      <p><%= l(:field_rg) %>: <%= h @customer.rg %></p>
      <p><%= l(:field_rg_expeditor) %>: <%= h @customer.rg_expeditor %></p>
      <p><%= l(:field_gender) %>: <%= l "field_gender_#{@customer.gender}" %></p>
      <p>
        <%= l(:field_contact_form) %>
        <ul>
          <% @customer.contact_forms.each do |contact_form| %>
            <li><%= contact_form %></li>
          <% end %>
        </p>
      </p>
      <p>
        <%= link_to 'Editar', {:controller => 'customers', :action => 'edit', :project_id => params[:project_id], :id => @customer} %>
      </p>
    </div>
  </div>

  <%= render :partial => 'audits', :locals => {:audits => @customer.audits.all(:order => 'id desc')} %>

  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js" %>
  <% javascript_tag do %>
    jQuery.noConflict();
    jQuery(document).ready(function(){
      jQuery('.header').click(function(){
        jQuery('.details').slideToggle();
      });
    });
  <% end %>
<% else %>
  <p class="nodata"><%=l(:label_no_data)%></p>
<% end %>
